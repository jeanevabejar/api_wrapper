<% anime = @anime[:data] %>
<div class="min-w-full max-w-full min-h-screen max-h-screen flex flex-row justify-evenly items-center relative ">
  <div class="border border-black w-[40%] min-h-[90vh] max-h-[90vh] overflow-auto p-4 relative">
    <div class="relative  w-full">
        <h1 class="text-[2rem] font-semibold">AnimeById</h1>
         <%= link_to 'Get Client.getAnimeById(id)', show_data_path(anime[:mal_id]), class:"absolute top-4 right-5 hover:text-blue-400" %>
    </div>
    
    <img src=<%= anime[:images][:jpg][:image_url]%> alt="<%= anime[:images][:jpg][:image_url]%>">
    <div class="absolute top-16 right-5 w-[50%]">
      <h1 class="text-wrap">Title: <%= anime[:title_english] %>/<%= anime[:title]  %></h1>
      <h1>Duration: <%= anime[:duration] %></h1>
      <h1>Episodes: <%= anime[:episodes] %></h1>
      <h1>Score: <%= anime[:score] %></h1>
      <h1 class="capitalize">Year & Season: <%= anime[:season] %>-<%= anime[:year]  %></h1>
    </div>
    <h1 class="text-justify">Synopsis: <%= anime[:synopsis] %> </h1>
  </div>
  <%= link_to '←', root_path, class: "w-full absolute top-0 capitalize text-[1.5rem] px-4" %>
  <div class="border border-black w-[40%] min-h-[90vh] max-h-[90vh] overflow-auto text-justify p-4 flex flex-col gap-4 overflow-x-hidden">
    <div class="w-full relative">
      <h1 class="text-[2.5rem] font-semibold">Review</h1>
       <%= link_to 'Get Client.getAnimeReviews(id)', show_data_path(anime[:mal_id]), class:"absolute top-5 right-5 hover:text-blue-400" %>
    </div>
    <% @anime_rev[:data].each do |r|  %>
      <div class="w-full h-[7vh] flex flex-row gap-4 capitalize relative">
        <img src="<%= r[:user][:images][:jpg][:image_url]  %>" alt="<%= r[:user][:images][:jpg][:image_url]  %>", class="max-w-[7%] max-h-[6vh] min-w-[7%] min-h-[6vh] rounded-full">
        <h1><%= r[:user][:username] %></h1>
        <h1 class="text-[0.7rem] absolute bottom-0 left-14"><%= r[:date] %></h1>
      </div>
      <h1>
        <%= r[:review]  %>
      </h1>
    <% end %>
  </div>
</div>
